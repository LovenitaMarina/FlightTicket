package training;

import java.util.ArrayList;
import java.util.stream.Stream;

import org.testng.annotations.Test;

public class JStreams {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		ArrayList<String> names = new ArrayList<String>();
		names.add("Allan");
		names.add("Thimothy");
		names.add("Abigail");
		names.add("theodore");
		names.add("Aaron");
		int count = 0;

		for (String name : names) {
			/*
			 * if (name.startsWith("A")) { count++; }
			 */
			System.out.println(name);
			/*
			 * if (name.contains("Th")) { System.out.println(name); }
			 */
		}

		System.out.println(count);

		JStreams jS = new JStreams();
		jS.stremFilter();
	}

	public void stremFilter() {
		ArrayList<String> names = new ArrayList<String>();
		names.add("Allan");
		names.add("Thimothy");
		names.add("Abigail");
		names.add("theodore");
		names.add("Aaron");
		long count = names.stream().filter(nm -> nm.startsWith("A")).count();
		System.out.println(count);
		long d = Stream.of("Abc", "AFG", "BVG", "AQW").filter(nm -> {
			nm.startsWith("A");
			return false;
		}).count();
		System.out.println(d);

		Stream.of(names).filter(nm -> nm.contains("a")).forEach(nm -> System.out.println(nm));
		System.out.println("finish");
	}
}
